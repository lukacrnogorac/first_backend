{
    "env": {
        "node": true,
        "es6": true
    },
    "globals": {
        "logger": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 1,
        "semi": [1, "always"]
    },

    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
      ]
}